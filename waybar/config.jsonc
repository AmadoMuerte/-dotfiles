{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 48,
    "modules-left": [
        "clock#Moscow",
        "custom/wakatime"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "memory",
        "cpu",
        "custom/temperature",
        "disk",
        "pulseaudio",
        "tray",
        "hyprland/language",
        "custom/notification"
    ],
    "hyprland/language": {
      "format": "{}",
      "format-ru": "🇷🇺",
      "format-en": "🇺🇸"
    },
    "custom/notification": {
      "tooltip": true,
      "format": "{icon}",
      "format-icons": {
        "notification": "<span foreground='red'><sup></sup></span>",
        "none": "",
        "dnd-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-none": "",
        "inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "inhibited-none": "",
        "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-inhibited-none": ""
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "sleep 0.1 && swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "",
            "default": "",
            "empty": ""
        },
        "persistent-workspaces": {
            "*": [1, 2, 3, 4, 5, 6, 7]
        }
    },
    "memory": {
      "format": "    {}%",
      "on-click": "tilix -e btop",
      "interval": 1
    },
    "cpu": {
      "format": "   {usage}%",
      "on-click": "tilix -e btop",
      "interval": 1
    },
    "custom/temperature": {
        "format": " {}°C",
        "interval": 1,
        "exec": "~/.config/waybar/scripts/temperature.sh",
        "return-type": "json",
        "tooltip": true,
        "on-click": "tilix -e watch -n 1 sensors"
    },
    "disk": {
      "interval": 5,
      "format": "  {percentage_used}%"
    },
    "tray": {
        "icon-size": 15,
        "spacing": 10
    },
    "clock#Moscow": {
        "interval": 60,
        "format": "MSK {:%H:%M}",
        "timezone": "Europe/Moscow",
        "tooltip-format": "<big>{:%d-%m-%Y %H:%M:%S}</big>"
    },
    // "battery": {
    //     "states": {
    //         "good": 95,
    //         "warning": 30,
    //         "critical": 20
    //     },
    //     "format": "{icon} {capacity}%",
    //     "format-charging": "⚡ {capacity}%",  
    //     "format-plugged": "🔌 {capacity}%",  
    //     "format-alt": "{time} {icon}",
    //     "format-icons": [
    //         "🪫",
    //         "🔋",  
    //         "🔋", 
    //         "🔋",  
    //         "🔋", 
    //         "🔋"
    //     ]
    // },
    "pulseaudio": {
      "format": "{icon} <b>{volume}%</b>",
      "format-muted": "󰝟",
      "format-bluetooth": "{icon}  <b>{volume}%</b>",
      "format-bluetooth-muted": "󰝟 ",
      "format-icons": {
        "headset": "",
        "default": ["󰕿", "󰖀", "󰕾"]
      },
      "tooltip": true,
      "on-click": "easyeffects"
    },
    "custom/wakatime": {
        "format": "{}",
        "return-type": "json",
        "exec": "bash -c 'if [ -f ~/.config/waybar/wakatime.cfg ]; then echo $(<~/.config/waybar/wakatime.cfg) | xargs -I {} ~/.config/waybar/waybar-code-stats en {}; else echo \"No API key\"; fi'",
        "interval": 1200,
        "on-click": "firefox https://wakatime.com/dashboard"
    }
}